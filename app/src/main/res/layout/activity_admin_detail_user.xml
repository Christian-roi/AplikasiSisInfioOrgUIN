<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/bgmain2"
    tools:context=".AdminDetailUser">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:adjustViewBounds="true"
        android:fitsSystemWindows="true"
        android:src="@drawable/logoo"
        tools:ignore="ContentDescription" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Informasi Detail Anggota"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="22sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Lengkap"
        android:layout_marginTop="5dp"
        android:textColor="#000"
        android:textSize="14sp"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/etNama"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:inputType="text"
        android:textColor="#000"
        android:textSize="14sp"
        android:textColorHint="@android:color/darker_gray"
        android:background="@drawable/field_border"
        android:padding="10dp"
        android:hint="Masukkan Nama Lengkap Anda"
        android:maxLines="1"
        tools:ignore="Autofill,LabelFor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Username"
        android:textColor="#000"
        android:textSize="14sp"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:inputType="text"
        android:textColor="#000"
        android:textColorHint="@android:color/darker_gray"
        android:background="@drawable/field_border"
        android:padding="10dp"
        android:textSize="14sp"
        android:hint="Masukkan Username Anda"
        tools:ignore="Autofill,LabelFor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Password"
        android:textColor="#000"
        android:textSize="14sp"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:inputType="text"
        android:editable="false"
        android:textColor="#000"
        android:textColorHint="@android:color/darker_gray"
        android:background="@drawable/field_border"
        android:padding="10dp"
        android:textSize="14sp"
        android:hint="Masukkan Password Anda"
        tools:ignore="Autofill,LabelFor" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnEdit"
            android:layout_width="165dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:background="@drawable/primary_button"
            android:text="Edit Data"
            android:padding="10dp"
            android:drawableLeft="@drawable/ic_edit"
            android:textColor="#FFF"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDelete"
            android:layout_width="165dp"
            android:layout_height="40dp"
            android:background="@drawable/danger_button"
            android:text="Hapus Data"
            android:padding="10dp"
            android:layout_gravity="center"
            android:textColor="#FFF"
            android:drawableLeft="@drawable/ic_hapus"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            tools:ignore="HardcodedText" />
    </LinearLayout>

</LinearLayout>