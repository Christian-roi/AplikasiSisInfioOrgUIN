<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/bgmain2"
    tools:context=".KegiatanForm">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Form Upload Kegiatan"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="22sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Judul Kegiatan"
        android:layout_marginTop="5dp"
        android:textColor="#000"
        android:textSize="14sp"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/etNama"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:inputType="text"
        android:textColor="#000"
        android:textSize="14sp"
        android:textColorHint="@android:color/darker_gray"
        android:background="@drawable/field_border"
        android:padding="10dp"
        android:hint="Masukkan Judul Kegiatan"
        android:maxLines="1"
        tools:ignore="Autofill,LabelFor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Waktu dan Tanggal Kegiatan"
        android:textColor="#000"
        android:textSize="14sp"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/etWaktu"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:inputType="text"
        android:textColor="#000"
        android:textColorHint="@android:color/darker_gray"
        android:background="@drawable/field_border"
        android:padding="10dp"
        android:textSize="14sp"
        android:hint="Masukkan Waktu/Tanggal [cth: 01 Januari 2023]"
        tools:ignore="Autofill,LabelFor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Tempat Kegiatan"
        android:textColor="#000"
        android:textSize="14sp"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/etTempat"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:inputType="text"
        android:textColor="#000"
        android:textColorHint="@android:color/darker_gray"
        android:background="@drawable/field_border"
        android:padding="10dp"
        android:textSize="14sp"
        android:hint="Masukkan Tempat Kegiatan"
        tools:ignore="Autofill,LabelFor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Deskripsi Kegiatan"
        android:textColor="#000"
        android:textSize="14sp"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/etDesk"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:inputType="text"
        android:textColor="#000"
        android:textColorHint="@android:color/darker_gray"
        android:background="@drawable/field_border"
        android:padding="10dp"
        android:textSize="14sp"
        android:hint="Masukkan Deskripsi"
        tools:ignore="Autofill,LabelFor" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btUpload"
        android:layout_width="165dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/success_button"
        android:text="Upload Foto"
        android:padding="10dp"
        android:textColor="#FFF"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:padding="10dp"
        android:id="@+id/preview"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btSubmit"
        android:layout_width="165dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/primary_button"
        android:text="Upload"
        android:padding="10dp"
        android:drawableLeft="@drawable/ic_login"
        android:textColor="#FFF"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

</LinearLayout>